<%- include("./header.ejs") %>

<div class="container">
  <h1 class="text-center">All Posts</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Thumb</th>
        <th>Title</th>
        <th>user</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% if(posts.length>=0){ %> <% posts.forEach((post)=>{ %>
      <tr>
        <td><img src="<%= post.imgUrl %>" alt="<%= post.title %>" /></td>
        <td><a href="/post/<%= post.urlTitle %>"><%= post.title %></a></td>
        <td><%= post.owner %></td>
        <td>
          <a href="#" class="btn btn-success">Edit</a>
          <a href="#" class="btn btn-danger">Delete</a>
        </td>
      </tr>

      <% }) %> <% }else{ %>
      <tr>
        <td colspan="4">
          No post found
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("./footer.ejs") %>
