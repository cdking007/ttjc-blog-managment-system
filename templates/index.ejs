<%- include("./partcials/header.ejs") %>

<body>
  <div class="container-fluid">
    <div
      id="carouselExampleControls"
      class="carousel slide"
      data-ride="carousel"
    >
      <div class="carousel-inner">
        <% if(popularPosts.length>=0){ %>
          <div class="carousel-item active">
            <img
              class="d-block w-100"
              src="<%= popularPosts[0].imgUrl %>"
              alt="<%= popularPosts[0].title %>"
            />
            <div class="carousel-caption">
              <h3> <a href="/post/<%= popularPosts[0].urlTitle %>" style="color: aliceblue; font-size: 2rem !important; "> <%= popularPosts[0].title %></a> </h3>
           
            </div>
          </div>
          <% for(let i=1;i<popularPosts.length;i++){ %>
            <div class="carousel-item">
          
              <img
                class="d-block w-100"
                src="<%= popularPosts[i].imgUrl %>"
                alt="<%= popularPosts[i].title %>"
              />
              <div class="carousel-caption">
                <h3><a href="/post/<%= popularPosts[i].urlTitle %>" style="color: aliceblue; font-size: 2rem !important; "> <%= popularPosts[i].title %></a> </h3>
             
              </div>
            </div>
          <% } %>
        <% }else { %>

          <div class="carousel-item active">
            <img
              class="d-block w-100"
              src="https://images.unsplash.com/photo-1532010940201-c31e6beacd39?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80"
              alt="First slide"
            />
          </div>
          
        <% } %>
        
        
      </div>
      <a
        class="carousel-control-prev"
        href="#carouselExampleControls"
        role="button"
        data-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a
        class="carousel-control-next"
        href="#carouselExampleControls"
        role="button"
        data-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <!-- featured blogs -->
    <div class="featured">
      <h1 class="text-center tit-1">Popular Posts</h1>
      <div class="row text">
        <% if(popularPosts.length>=0){ %>
          <% popularPosts.forEach((post)=>{ %>
            <!-- single post -->
          <div class="col-12 col-md-3">
            <div class="cust-col text-center">
              <div class="card" width="100%">
                <img
                  class="card-img-top"
                  src="<%= post.imgUrl %>"
                  alt="<%= post.title %>"
                  style="width:100%"
                />
                <div class="card-body">
                  <h4 class="card-title"><%= post.title %></h4>
                  
                  <a href="/post/<%= post.urlTitle %>" class="btn btn-primary btn-block">Read more</a>
                </div>
              </div>
            </div>
          </div>
          <!-- single post end -->
          <% }) %>
        <% } else { %>
          <h1 class="text-center">No Post found</h1>
        <% } %> %>
          
        
        
      </div>
    </div>
    <div class="latest">
        <h1 class="text-center tit-1">Latest posts</h1>
        <div class="row">
          <% if(posts.length>=0){ %>
            <% posts.forEach((post)=>{ %>
              <!-- single post -->
            <div class="col-12 col-md-3">
              <div class="cust-col text-center">
                <div class="card" width="100%">
                  <img
                    class="card-img-top"
                    src="<%= post.imgUrl %>"
                    alt="<%= post.title %>"
                    style="width:100%"
                  />
                  <div class="card-body">
                    <h4 class="card-title"><%= post.title %></h4>
                    
                    <a href="/post/<%= post.urlTitle %>" class="btn btn-primary btn-block">Read more</a>
                  </div>
                </div>
              </div>
            </div>
            <!-- single post end -->
            <% }) %>
          <% } else { %>
            <h1 class="text-center">No Post found</h1>
          <% } %> %>
            
           
          </div>
        </div>
    </div>
  </div>
</body>

<%- include("./partcials/footer.ejs") %>
